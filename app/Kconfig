mainmenu "Thread Button Application"

config APP_SUSPEND_CONSOLE
	bool "Suspend console"
	help
	  Suspend console.

config APP_USE_TEXT_MODE
	bool "Use the Bartendro text mode"
	help
	  Use the Bartendro text mode.

config APP_WATCHDOG_TIMEOUT_SEC
	int "Watchdog timeout (sec)"
	default 30
	help
	  Watchdog timeout in seconds.

config APP_MAIN_LOOP_PERIOD_SEC
	int "Main loop period (sec)"
	default 10
	help
	  Main loop period in seconds.

source "Kconfig.zephyr"